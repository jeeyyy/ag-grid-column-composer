:root {
    --accent: green;
}

.column-composer-container{
    display: flex;
    flex-direction: column;
    padding: 0em;
    margin: 0;
    width: 100%;
    height: 100%;
    &.column-composer-container-hidden {
        display: none;    
    }
    .title-bar {
        width: 100%;
        height: 40px;
        display: flex;
        flex-direction: row;
        align-items: center;
        .title {
            flex-grow: 1;
            padding: 0em 0.5em;
        }
        .actions {
            padding: 0em 0.5em;
        }
    }
    .body {
        display: flex;
        flex-direction: row;
        flex-grow: 1;
        .hidden-column-list-container {
            order: 1;
            width: 50%;
            border-top: 1px black solid;
            border-right: 1px solid black;
            padding: 0.5em 1em;
        }
        .visible-column-list-container {
            order: 2;
            width: 50%;
            border-top: 1px black solid;
            padding: 0.5em 1em;
        }
        .column-list {
            list-stype-type: none;
            padding: 0;
            .column-config {
                display: flex;
                list-style-type: none;
                flex-direction: row;
                /* TODO: Do we need this */
                .config-row {
                    
                }
            }
        }
        .quick-filter-container {
            width: 100%;
            .quick-filter {
                width: 100%;
            }
        }
    }
    
}

