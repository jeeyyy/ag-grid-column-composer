    font-weight: bold;
}


.eye {
    margin: 0.25em;
    width: .5em;
    height: .5em;
    border: solid 1px #555;
    border-radius:  75% 15%;
    position: relative;
    transform: rotate(45deg);
    background-color: #555;
    &:before {
        content: '';
        display: block;
        position: absolute;
        width: 0.25em;
        height: 0.25em;
        border: solid 1px #fff;
        background-color: #555;
        border-radius: 60%;
        left: 0;
        top: 0;
    }
}

.cross {
    margin: 0.25em;
    background: #555;
    width: 0.25em;
    height: 1em;
    position: relative;
    transform: rotate(45deg);

    &:after {
        background: #555;
        content: "";
        height: 1em;
        left: 0em;
        position: absolute;
        top: 0em;
        width: 0.25em;
        transform: rotate(90deg);
    }
}

.cross-circle {
    margin: 0.25em;
    background: #555;
    width: 1em;
    height: 1em;
	border-radius: 0.5em;
    position: relative;
    &:before {
        background: #fff;
        content: '';
        width: 0.2em;
        height: 0.8em;
        top: 0.1em;
        left: 0.3em;
        position: absolute;
        transform: rotate(45deg);
    }
    &:after {
        background: #fff;
        content: '';
        width: 0.2em;
        height: 0.8em;
        top: 0.1em;
        left: 0.3em;
        position: absolute;
        transform: rotate(-45deg);
    }
}

.plus-circle {
    margin: 0.25em;
    background: #555;
    width: 1em;
    height: 1em;
	border-radius: 0.5em;
    position: relative;
    &:before {
        background: #fff;
        content: '';
        width: 0.2em;
        height: 0.8em;
        top: 0.1em;
        left: 0.4em;
        position: absolute;
    }
    &:after {
        background: #fff;
        content: '';
        width: 0.2em;
        height: 0.8em;
        top: 0.1em;
        left: 0.4em;
        position: absolute;
        transform: rotate(90deg);
    }
}

.pinned-menu {
    &:after {
        content: '';
        width: 0;
        height: 0;
        border-bottom: 5px solid transparent;
        border-top: 5px solid transparent;
        border-right: 5px solid black;
        display: none;
        position: absolute;
        left: -5px;
        top: 15px;
        bottom: auto;
    }
    margin: 0.25px;
    color: #fff;
    background-color: #000;
    z-index: 1;
    min-width: 65px;
    display: none;
    position: absolute;
    cursor: 'pointer';
    top: -15px;
    left: 20px;
    &:hover {
        display: block;
    }
}

.pin-icon {
    display: inline-block;
    position: relative;
    float: left;
    &:hover {
        .pinned-menu {
            display: block;
            
            &:after {
                display: block;
            }
            .pin-button {
                cursor: pointer;
                padding: 0.5em;
                &.active {
                    color: green;
                }
                &:first-child {
                    border-bottom: 1px solid #555;
                }
                &:last-child {
                    border-top: 1px solid #fff;
                }
            }
        }
    }
}

.active {
    opacity: 1;
}

.disabled {
    opacity: 0.3;
}